<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length) {%>
               <ul>
                   <% orders.forEach(order => { %>
                    <li>
                        <h1>주문 # <%= order.id %></h1>
                        <ul>
                            <% order.products.forEach(item => { %>
                                <li><%= item.title %> (<%= item.orderItem.quantity %>개)</li>
                            <% }) %>
                        </ul>
                    </li>
                   <% }) %>
               </ul>
            <% }  else {%>
            <h1>Nothing there!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>